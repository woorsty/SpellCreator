<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Neues <%= className %> Feature hinzufügen</title>
    <style>
      body {
        background-color: #1e1e1e;
        /* Dunkelgrau */
        color: #f0f0f0;
        /* Helles Grau */
        font-family: sans-serif;
      }

      h1 {
        color: #ccc;
      }

      label {
        display: block;
        margin-bottom: 5px;
        color: #ddd;
      }

      input[type="text"],
      input[type="number"],
      textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid #555;
        background-color: #333;
        color: #f0f0f0;
        box-sizing: border-box;
        /* Wichtig für die Größenangabe */
      }

      textarea {
        height: 150px;
        /* Größere Rich-Textboxen */
      }

      button[type="submit"] {
        background-color: #5cb85c;
        /* Grün */
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
      }

      button[type="submit"]:hover {
        background-color: #4cae4c;
      }
    </style>
  </head>

  <body>
    <% if (typeof subclass !== 'undefined') { %>
    <h1>Neues <%= className %> <%= subclass %> Feature hinzufügen</h1>
      <form action="/class/<%= className %>/<%= subclass %>/add" method="POST">
        <input type="hidden" name="subclass" value="<%= subclass %>" />
    <% } else { %>
      <h1>Neues <%= className %> Feature hinzufügen</h1>
      <form action="/class/<%= className %>/add" method="POST">
    <% } %>
      <div>
        <label for="Stufe">Stufe:</label>
        <input type="number" id="Stufe" name="Stufe" required /><br /><br />
      </div>
      <div>
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" required /><br /><br />
      </div>
      <div>
        <label for="Text">Beschreibung:</label>
        <textarea id="Text" name="Text" required></textarea><br /><br />
      </div>
      <div>
        <label for="HöhereLevel">Höhere Level:</label>
        <textarea id="HöhereLevel" name="HöhereLevel"></textarea><br /><br />
      </div>
      <div>
        <label for="Referenz">Referenz:</label>
        <input type="text" id="Referenz" name="Referenz" /><br /><br />
      </div>
      <input type="hidden" name="Klasse" value="<%= className %>" />
      <button type="submit">Feature hinzufügen</button>
    </form>
  </body>
</html>