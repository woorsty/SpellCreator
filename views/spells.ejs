                        <option value="3" <%= locals.filterStufeBis === '3' ? 'selected' : '' %>>3</option>
                        <option value="4" <%= locals.filterStufeBis === '4' ? 'selected' : '' %>>4</option>
                        <option value="5" <%= locals.filterStufeBis === '5' ? 'selected' : '' %>>5</option>
                        <option value="6" <%= locals.filterStufeBis === '6' ? 'selected' : '' %>>6</option>
                        <option value="7" <%= locals.filterStufeBis === '7' ? 'selected' : '' %>>7</option>
                        <option value="8" <%= locals.filterStufeBis === '8' ? 'selected' : '' %>>8</option>
                        <option value="9" <%= locals.filterStufeBis === '9' ? 'selected' : '' %>>9</option>
                    </select>
                </div>

                <label for="schule">Schule:</label>
                <select name="schule" id="schule">
                    <option value="">Alle</option>
                    <option value="Beschwörung" <%= locals.filterSchule === 'Beschwörung' ? 'selected' : '' %>>Beschwörung</option>
                    <option value="Verzauberung" <%= locals.filterSchule === 'Verzauberung' ? 'selected' : '' %>>Verzauberung</option>
                    <option value="Hervorrufung" <%= locals.filterSchule === 'Hervorrufung' ? 'selected' : '' %>>Hervorrufung</option>
                    <option value="Nekromantie" <%= locals.filterSchule === 'Nekromantie' ? 'selected' : '' %>>Nekromantie</option>
